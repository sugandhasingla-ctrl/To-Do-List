<div class="task-item">
  {{!-- Toggle completion --}}
  <input
     type="checkbox"
     checked={{@task.completed}}
     {{on "change" (fn @onEdit @task.id (not @task.completed))}}
  >

  {{!-- Task title --}}
  <span class={{if @task.completed "completed"}}>{{@task.title}}</span>

  {{!-- Edit task --}}
  <button {{on "click" (fn (async (taskId, taskTitle) => {
    let newTitle = prompt("Edit task title", @task.title);
    if (newTitle !== null) {
      @onEdit(taskId, newTitle);
    }
  })  @task.id @task.title)}}>
     Edit
  </button>

  {{!-- Delete task --}}
  <button {{on "click" (fn @onDelete @task.id)}}>
    Delete
  </button>
</div>
